<div class='content-container'>
  <div class='content'>
    <h1>Editing <%= @category.title %></h1>

    <%= render "form", category: @category %>

    <br>

    <%= button_to "Destroy this category", @category, class:'destroy-link', method: :delete if logged_in?(:site_admin) %>

    <br>
    
    <div class='admin-link'>
      <%= link_to "Back to #{@category.title}", @category %> |
      <%= link_to "Back to home", categories_path %>
    </div>
  </div>
</div>
